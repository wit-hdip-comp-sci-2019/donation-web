{{> welcomemenu title="Donation Services Inc." subTitle="Please Log in"}}

<div class="uk-section uk-flex uk-flex-middle">
  <div class="uk-grid uk-grid-stack">
    <div class="uk-width-2-3@m">
      <div class="uk-margin uk-width-xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
        <h3 class="uk-card-title uk-text-center">Welcome back!</h3>
        <form action="/login" method="POST">
          <div class="uk-margin uk-text-left">
            <label class="uk-form-label" for="form-stacked-text">Email</label>
            <div class="uk-inline uk-width-1-1">
              <span class="uk-form-icon" uk-icon="icon: mail"></span>
              <input class="uk-input uk-form-large" type="text" name="email">
            </div>
          </div>
          <div class="uk-margin">
            <div class="uk-inline uk-width-1-1">
              <span class="uk-form-icon" uk-icon="icon: lock"></span>
              <input class="uk-input uk-form-large" type="password" name="password">
            </div>
          </div>
          <div class="uk-margin">
            <button class="uk-button uk-button-primary uk-button-large uk-width-1-1">Login</button>
          </div>
        </form>
        <div class="uk-text-left uk-text-small">
          {{> error }}
        </div>
      </div>
    </div>
    <div class="uk-width-1-3@m uk-flex uk-flex-center uk-flex-middle">
      <img width="200" src="images/homer2.png">
    </div>
  </div>
</div>